#include <iostream>
#include <vector>
#include <string>
#include <algorithm> 

int main() {


    int N;
    std::cout << "Введите размер вектора для чисел (int): ";
    std::cin >> N;

    std::vector<int> intVector;
    std::cout << "Введите " << N << " чисел: ";
    for (int i = 0; i < N; ++i) {
        int number;
        std::cin >> number;
        intVector.push_back(number); 
    }

    std::cout << "Числа в обратном порядке: ";

    std::reverse(intVector.begin(), intVector.end());
    for (int number : intVector) { 
        std::cout << number << " ";
    }
    std::cout << std::endl;

    std::cout << "\nВведите размер вектора для строк (string): ";
    std::cin >> N;

    std::vector<std::string> stringVector;
    std::cout << "Введите " << N << " строк: ";
    std::cin.ignore();

    for (int i = 0; i < N; ++i) {
        std::string str;
        std::getline(std::cin, str); 
        stringVector.push_back(str);
    }

    std::cout << "Строки: ";
    for (const std::string& str : stringVector) {
        std::cout << str << " ";
    }
    std::cout << std::endl;


    std::string newString;
    std::cout << "Введите еще одну строку: ";
    std::getline(std::cin, newString); 
    stringVector.push_back(newString);

    std::cout << "Строки после добавления: ";
    for (const std::string& str : stringVector) {
        std::cout << str << " ";
    }
    std::cout << std::endl;

    return 0;
}
