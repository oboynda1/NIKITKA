#include <iostream>
#include <cstdlib>
#include <ctime>

class CardDeck {
public:
    CardDeck() {
        const std::string suits[] = {"черви", "буби", "пики", "крести"};
        const std::string ranks[] = {"2", "3", "4", "5", "6", "7", "8", "9", "10", "валет", "дама", "король", "туз"};

        int index = 0;
        for (const auto& suit : suits) {
            for (const auto& rank : ranks) {
                deck[index++] = rank + " " + suit;
            }
        }

        std::srand(static_cast<unsigned int>(std::time(0)));
        for (int i = 0; i < 52; ++i) {
            int j = std::rand() % 52;
            std::swap(deck[i], deck[j]);
        }
    }

    std::string drawCard() {
        if (currentIndex >= 52) {
            return "Нет больше карт";
        }
        return deck[currentIndex++];
    }

private:
    std::string deck[52]; 
    int currentIndex = 0;
};

int main() {
    CardDeck cardDeck;
    std::string input;

    for (int i = 0; i < 53; ++i) {
        std::cout << "Нажмите Enter для получения карты...";
        std::getline(std::cin, input); 
        std::string card = cardDeck.drawCard();
        std::cout << card << std::endl;
        if (card == "Нет больше карт") {
            break; 
        }
    }

    return 0;
}
