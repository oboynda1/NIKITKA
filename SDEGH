#include <iostream>

using namespace std;

class A;

class B;

void addFields(const A& a, const B& b);

class A {
private:
    int x; 
    double y;

public:

    A(int x, double y) : x(x), y(y) {}


    friend void addFields(const A& a, const B& b);
};


class B {
private:
    int m; 
    double n; 

public:

    B(int m, double n) : m(m), n(n) {}


    friend void addFields(const A& a, const B& b);
};

void addFields(const A& a, const B& b) {
    double sumX = a.x + b.m; 
    double sumY = a.y + b.n;
    cout << "Сумма полей: " << sumX << " (x + m), " << sumY << " (y + n)" << endl;
}

int main() {
    A objA(5, 3.5); 
    B objB(10, 2.5); 

    addFields(objA, objB);


}
