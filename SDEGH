#include <iostream>
#include <string>

using namespace std;

class ElectricVehicle {
protected:
    int batteryLevel;

public:
    ElectricVehicle() : batteryLevel(0) {}

    void charge(int amount) {
        batteryLevel += amount;
        cout << "Заряд батареи увеличен на " << amount << ". Текущий уровень заряда: " << batteryLevel << endl;
    }

    void showBattery() const {
        cout << "Уровень заряда батареи: " << batteryLevel << endl;
    }
};

class LandTransport {
protected:
    int speed;

public:
    LandTransport() : speed(0) {}

    void accelerate(int value) {
        speed += value;
        cout << "Увеличена скорость на " << value << ". Текущая скорость: " << speed << endl;
    }

    void brake(int value) {
        speed -= value;
        if (speed < 0) speed = 0;
        cout << "Снижена скорость на " << value << ". Текущая скорость: " << speed << endl;
    }
};

class WaterTransport {
protected:
    int depth;

public:
    WaterTransport() : depth(0) {}

    void dive(int value) {
        depth += value;
        cout << "Увеличена глубина на " << value << ". Текущая глубина: " << depth << endl;
    }

    void surface(int value) {
        depth -= value;
        if (depth < 0) depth = 0;
        cout << "Снижена глубина на " << value << ". Текущая глубина: " << depth << endl;
    }
};

class ElectricCar : public ElectricVehicle, public LandTransport {
public:
    void drive() {
        cout << "Электромобиль движется." << endl;
    }
};

class ElectricBoat : public ElectricVehicle, public WaterTransport {
public:
    void sail() {
        cout << "Электрическая лодка плывет." << endl;
    }
};

class AmphibiousVehicle : public ElectricCar, public ElectricBoat {
public:
    void switchToLandMode() {
        cout << "Переключение в режим наземного транспорта." << endl;
    }

    void switchToWaterMode() {
        cout << "Переключение в режим водного транспорта." << endl;
    }
};

int main() {
    AmphibiousVehicle amphibiousVehicle;

    amphibiousVehicle.charge(100);
    amphibiousVehicle.showBattery();

    amphibiousVehicle.accelerate(50);
    amphibiousVehicle.drive();

    amphibiousVehicle.dive(10);
    amphibiousVehicle.sail();

    amphibiousVehicle.switchToWaterMode();
    amphibiousVehicle.switchToLandMode();

}
