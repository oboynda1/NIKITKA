#include <iostream>

int* mergeArrays(int* arr1, int size1, int* arr2, int size2) {
    int* mergedArray = new int[size1 + size2];
    for (int i = 0; i < size1; ++i) {
        mergedArray[i] = arr1[i];
    }

    for (int i = 0; i < size2; ++i) {
        mergedArray[size1 + i] = arr2[i];
    }

    return mergedArray; 
}

int main() {
    int arr1[] = {1, 2, 3};
    int arr2[] = {4, 5, 6};

    int* merged = mergeArrays(arr1, 3, arr2, 3);
    
    for (int i = 0; i < 6; ++i) {
        std::cout << merged[i] << " ";
    }
    std::cout << std::endl;

    delete[] merged; 
    return 0;
}
